@{
    ViewBag.Title = "Future Bill Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/assets/css/jquery-ui.min.css" rel="stylesheet" />

<style>
    .ui-datepicker {
        width: 19em;
    }
</style>

<script src="~/Areas/SystemReports/Content/Scripts/FutureBillReport.js"></script>
@using (Html.BeginForm("FutureBillReport", "SystemReports", FormMethod.Post))
{

    <div class="form-actions clearfix">

        <div class="col-xs-12">

            <div class="col-xs-6 form-group">
                <label class="col-sm-3 control-label no-padding-right align-right">SIC Group<span class="redstar">*</span></label>
                <div class="col-sm-9">
                    @Html.Partial("~/Areas/WO/Views/PartialContent/_GroupInfo.cshtml", new ViewDataDictionary { { "ddlId", "InCWO" }, { "GroupType", "InCWO" }, { "selectedId", 0 }, { "DisplayName", "Select" } })
                </div>
                <input type="hidden" id="hdnGroupCode" name="GroupId" />
            </div>

            <div class="col-xs-6 form-group">
                <label for="ddlBillingFrequency" class="col-sm-3 control-label no-padding-right align-right">Billing Frequency<span class="redstar">*</span></label>
                <div class="col-sm-9">

                    <select id="ddlMonth">
                        <option value="0">Month</option>
                        <option value="1">Jan</option>
                        <option value="2">Feb</option>
                        <option value="3">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">Aug</option>
                        <option value="9">Sept</option>
                        <option value="10">Oct</option>
                        <option value="11">Nov</option>
                        <option value="12">Dec</option>
                    </select>
                    <input type="hidden" id="hdnMonth" name="BillingMonth" />

                    <select id="ddlYear">
                        <option value="0">Year</option>
                    </select>

                    <input type="hidden" id="hdnDate" name="BillingDate" />

                    <select id="ddlBillingFrequency" tabindex="3">
                        <option value="">Frequency</option>
                    </select>
                    <input type="hidden" id="hdnBillingFreq" name="BillingFreq" />

                </div>
            </div>


        </div>

        <div class="col-xs-12">

            <div class="col-xs-6 form-group">
                <label class="col-sm-3 control-label no-padding-right align-right" for="txtClientName">Client / Customer</label>
                <div class="col-sm-6" id="divClientOne" tabindex="1">
                    @Html.Partial("~/Areas/WO/Views/PartialContent/_ClientChosen.cshtml", new ViewDataDictionary { { "ddlId", "ddlClient" }, { "clientType", "" }, { "selectedId", -1 }, { "DisplayName", "ALL" }, { "DefaultLoad", 0 }, { "WOID", 0 }, { "ClientSource", "1" } })
                </div>
                <input type="hidden" id="hdnCompayID" name="CompanyID" />
                <input type="hidden" id="hdnSource" name="Source" />
            </div>


            <div class="col-xs-6 form-group">
                <label class="col-sm-3 control-label no-padding-right align-right">Fee Service Type</label>
                <div class="col-sm-9">
                    <select id="ddlFeeServiceType" tabindex="2" name="FeeServiceType" class="col-xs-7">
                        <option value="">ALL</option>
                    </select>
                </div>
                <input type="hidden" id="hdnFeeServiceType" name="FeeServiceType" />
            </div>


        </div>
        <div class="col-xs-12">

            <div class="col-xs-6 align-right">
                @*<input type="submit" value="DOWNLOAD REPORT" id="btnDownLoadFutureBill" class="btn btn-purple" name="command" />*@
                <button type="submit" value="DOWNLOAD REPORT" id="btnDownLoadFutureBill" class="btn btn-purple" name="command" tabindex="4">
                    <i class="ace-icon fa fa-download bigger-110"></i>
                    Download Report
                </button>
            </div>

            <div class="col-xs-6 no-padding-left">
                <button id="btnClear" class="btn" type="button" tabindex="5">
                    <i class="ace-icon fa fa-undo bigger-110"></i>
                    RESET
                </button>
            </div>

        </div>

    </div>
}

<script id="scriptBillingFrequency" type="text/html">
    <option bfid="{{= ID}}" value="{{= Code}}">{{= Name}}</option>
</script>

<script id="FeeServiceTypeTemplate" type="text/html">
    <option value="{{= Code}}">{{= Name}}</option>
</script>
