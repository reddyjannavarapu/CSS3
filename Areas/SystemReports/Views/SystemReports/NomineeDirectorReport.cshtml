@{
    ViewBag.Title = "Nominee Director Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/assets/css/jquery-ui.min.css" rel="stylesheet" />

<style>
    .ui-datepicker {
        width: 19em;
    }
</style>

<script src="~/Areas/SystemReports/Content/Scripts/NomineeDirectorReport.js"></script>

@using (Html.BeginForm("NomineeDirectorReport", "SystemReports", FormMethod.Post))
{
    <div class="form-actions clearfix">

        <div class="col-xs-12">

            <div class="col-xs-4 form-group">
                <label for="ddlGroupCode" class="col-sm-4 control-label no-padding-right align-right">SIC Group</label>
                <div class="col-sm-6" tabindex="2">
                    @Html.Partial("~/Areas/WO/Views/PartialContent/_GroupInfo.cshtml", new ViewDataDictionary { { "ddlId", "InCWO" }, { "GroupType", "InCWO" }, { "selectedId", 0 }, { "DisplayName", "ALL" } })
                </div>
                <input type="hidden" id="hdnGroupCode" name="GroupCode" />
            </div>


            <div class="col-xs-4 form-group">
                <label class="col-sm-4 control-label no-padding-right align-right" for="lblFromDate">From Date</label>
                <div class="col-sm-8">
                    <input type="text" id="txtFromDate" onblur="javascript:validateDateDDMMYYYY(this)" onkeypress="return checkDateValidation(event)" maxlength="10" name="FromDate" class="col-xs-10 special" tabindex="3" />
                </div>
            </div>

            <div class="col-xs-4 form-group">
                <label class="col-sm-4 control-label no-padding align-right">Nominee Director</label>
                <div class="col-sm-8">
                    <select id="ddlNomineeDirector" name="NomineeDirector" tabindex="5">
                        <option value="-1">ALL</option>
                    </select>
                </div>
            </div>

        </div>

        <div class="col-xs-12">

            <div class="col-xs-4 form-group">
                <label class="col-sm-4 control-label no-padding-right align-right" for="txtClientName">Client / Customer</label>
                <div class="col-sm-6" id="divClientOne" tabindex="2">
                    @Html.Partial("~/Areas/WO/Views/PartialContent/_ClientChosen.cshtml", new ViewDataDictionary { { "ddlId", "ddlClient" }, { "clientType", "" }, { "selectedId", -1 }, { "DisplayName", "ALL" }, { "DefaultLoad", 0 }, { "WOID", 0 }, { "ClientSource", "1,4" } })
                </div>
                <input type="hidden" id="hdnCompayID" name="CompanyID" />
                <input type="hidden" id="hdnSource" name="Source" />
            </div>
            <div class="col-xs-4 form-group">
                <label class="col-sm-4 control-label no-padding-right align-right" for="lblToDate">To Date</label>
                <div class="col-sm-8">
                    <input id="txtToDate" type="text" onblur="javascript:validateDateDDMMYYYY(this)" onkeypress="return checkDateValidation(event)" maxlength="10" name="ToDate" class="col-xs-10 special" tabindex="4" />
                </div>
            </div>

            <div class="col-xs-4 form-group">
                <label class="col-sm-4 control-label no-padding-right align-right" for="drpTypeData">Client No</label>
                <div class="col-sm-8">
                    <input id="txtClientNo" name="ClientNo" type="text" maxlength="100" class="col-xs-8 special" tabindex="6" />
                </div>
            </div>

        </div>

        <div class="col-xs-12 no-padding-left" style="margin-top: 10px;">
            <div class="col-xs-6 align-right">
                @*<input type="submit" value="DOWNLOAD REPORT" id="btnDownLoadDI" class="btn btn-purple" tabindex="6" name="command" />*@
                <button type="submit" value="DOWNLOAD REPORT" id="btnDownLoadNomineeReport" class="btn btn-purple" name="command" tabindex="7">
                    <i class="ace-icon fa fa-download bigger-110"></i>
                    Download Report
                </button>
            </div>

            <div class="col-xs-6">
                <button id="btnClear" class="btn" type="button" tabindex="8">
                    <i class="ace-icon fa fa-undo bigger-110"></i>
                    RESET
                </button>
            </div>
        </div>

    </div>    
    
    <script type="text/html" id="ScriptNomineeDirector">
        <option value="{{= Code}}">{{= Name}}</option>
    </script>
}