@{
    ViewBag.Title = "Add Third Party";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string ClassName = string.Empty;
    if (ViewBag.Role.Contains("SuperAdmin"))
    {
        ClassName = "ShowInfo";
    }
    else
    {
        ClassName = "HideInfo";
    }
}

<style>
    .HideInfo {
        display: none !important;
    }

    .ShowInfo {
        display: inline !important;
    }
</style>
<link href="~/Content/css/assets/css/jquery-ui.min.css" rel="stylesheet" />

<div class="row">
    <input type="hidden" id="hdnThirdPrtyID" />
    <div style="padding-top: 10px; padding-bottom: 20px; margin-left: 20px;" class="col-xs-4 WoBC WoBR">
        <div class="text-left col-xs-12">
            Name of the Company<span class="redstar">*</span>
        </div>
        <div class="col-xs-12">
            <input type="text" placeholder="Name of the Company" class="col-xs-9 special" id="txtNameOfCompany" maxlength="50" tabindex="1" />
        </div>

        <div class="text-left col-xs-12" style="padding-top: 10px;">
            ACCPAC Code<span class="redstar">*</span>
        </div>
        <div class="col-xs-12">
            <input type="text" placeholder="ACCPAC Code" class="col-xs-9" id="txtACCPACCode" maxlength="30" tabindex="2" />
        </div>

        <div class="text-left col-xs-12" style="padding-top: 10px;">
            Address Line1
        </div>
        <div class="col-xs-12">
            <input type="text" placeholder="Address Line1" class="col-xs-9 special" id="txtCompanyAddressLine1" maxlength="100" tabindex="3" />
        </div>

        <div class="text-left col-xs-12" style="padding-top: 10px;">
            Address Line2
        </div>
        <div class="col-xs-12">
            <input type="text" placeholder="Address Line2" class="col-xs-9 special" id="txtCompanyAddressLine2" maxlength="100" tabindex="4" />
        </div>
        <div class="text-left col-xs-12" style="padding-top: 10px;">
            Address Line3
        </div>
        <div class="col-xs-12">
            <input type="text" placeholder="Address Line3" class="col-xs-9 special" id="txtCompanyAddressLine3" maxlength="100" tabindex="5" />
        </div>
    </div>

    <div style="padding-top: 14px; padding-bottom: 20px; margin-left: 10px;" class="col-xs-4 WoBC WoBR">
        <div class="text-left col-xs-12">
            Country
        </div>
        <div class="col-xs-12">
            <select class="col-xs-8 no-padding-left ddlCountryInCreateCompany" id="ddlCountry" tabindex="6">
                <option value="-1">Select</option>
            </select>
        </div>

        <div class="text-left col-xs-12" style="padding-top: 10px;">
            Postal Code
        </div>
        <div class="col-xs-12">
            <input type="text" placeholder="Postal Code" class="col-xs-9 DisableCutCopyPaste special" id="txtCompanyPostalCode" maxlength="10" tabindex="7" />
        </div>
        <div class="text-left col-xs-12" style="padding-top: 10px;">
            Email
        </div>
        <div class="col-xs-12">
            <input type="text" placeholder="Email" class="col-xs-9 special" id="txtEmail" maxlength="100" tabindex="8" />
        </div>

        <div class="text-left col-xs-12" style="padding-top: 10px;">
            Contact No
        </div>
        <div class="col-xs-12">
            <input type="text" placeholder="Contact No" class="col-xs-9" id="txtContactNo" maxlength="100" tabindex="9" />
        </div>

        <div class="text-left col-xs-12" style="padding-top: 10px;">
            Fax
        </div>
        <div class="col-xs-12">
            <input type="text" placeholder="Fax" class="col-xs-9 special" id="txtFax" maxlength="20" tabindex="100" />
        </div>
    </div>



    <div class="col-xs-12 margin-20t align-right" style="padding-right: 414px;">
        <button class="btn btn-info" type="button" id="btnSaveThirdPartyDetails" tabindex="11">
            <i class="ace-icon fa fa-check bigger-110"></i>
            SAVE
       
        </button>
        <button type="button" class="btn" id="btnClearDetails" tabindex="12">
            <i class="ace-icon fa fa-undo bigger-110"></i>
            RESET
           
        </button>
    </div>
</div>





<div class="margin-5t"></div>

<div class="tableGrid dataTables_wrapper form-inline" style="margin-top: 50px">
    <div id="divSearch" style="margin-left: 10px;" class="row widget-main">

        <div style="float: left">
            Name of the Company :
                  <input type="text" id="txtNameOfThecompany" maxlength="50" tabindex="13" class="special" />
            Order By :
                <select id="ddlOrderBy" tabindex="14">
                    <option value="CompanyName ASC" selected="selected">CompanyName ASC</option>
                    <option value="CompanyName DESC">CompanyName DESC</option>
                </select>
        </div>

        <div style="float: left">
            Page Size
            <select id="ddlPageSize" tabindex="15">
                <option value="5">5</option>
                <option value="10" selected="selected">10</option>
                <option value="20">20</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
        </div>

        <div>
            <button id="btnSearchThirdParty" class="btn btn-info" type="button" style="margin-left: 33px;" tabindex="16">
                <i class="ace-icon fa fa-search bigger-110"></i>
                SEARCH
            </button>
        </div>

    </div>

</div>

<div class="tableGrid dataTables_wrapper form-inline">
    <div id="divBillingThirdParty">
        <table class="table table-striped table-bordered table-hover" id="tblBillingThirdParty" style="background-color: white !important;">

            <thead>
                <tr>
                    <th>Company 
                    </th>
                    <th>ACCPAC Code
                    </th>
                    <th>Address Line1
                    </th>

                    <th>Country 
                    </th>
                    <th>Postal Code
                    </th>
                    <th>Email
                    </th>
                    <th>Contact No
                    </th>

                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="trThirdPartyData">
            </tbody>
        </table>
        <div id="divNoData" class="row" style="display: none;">
            <table class="table table-striped table-bordered table-hover">
                <tbody>
                    <tr>
                        <td colspan="5">
                            <div id="noData">
                                No data found.
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row" id="divPaging" style="display: none">
            <div class="col-xs-6 margin-10t"><span id="listName"></span>&nbsp;<span id="listCount" class="badge"></span></div>
            <div id="numericcontainer" class="dataTables_paginate paging_bootstrap">
                <div>
                    <ul id="pagination-digg" class="pagination">
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>



<div id="modal-form" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="blue bigger">Third Party Billing Data</h4>
            </div>

            <div class="modal-body">
                <table>
                    <tr>
                        <td>Company Name
                        </td>
                        <td>:</td>
                        <td>
                            <label id="lblCompanyName" style="margin: 6px;"></label>
                        </td>
                    </tr>
                    <tr>
                        <td>ACCPAC Code 
                        </td>
                        <td>:</td>
                        <td>
                            <label id="lblAccPacCode" style="margin: 6px;"></label>
                        </td>
                    </tr>
                    <tr>
                        <td>Address Line1 
                        </td>
                        <td>:</td>
                        <td>
                            <label id="lblCompanyAddressLine1" style="margin: 6px;"></label>
                        </td>
                    </tr>
                    <tr>
                        <td>Address Line2 
                        </td>
                        <td>:</td>
                        <td>
                            <label id="lblCompanyAddressLine2" style="margin: 6px;"></label>
                        </td>
                    </tr>
                    <tr>
                        <td>Address Line3  
                        </td>
                        <td>:</td>
                        <td>
                            <label id="lblCompanyAddressLine3" style="margin: 6px;"></label>
                        </td>
                    </tr>
                    <tr>
                        <td>Country Name 
                        </td>
                        <td>:</td>
                        <td>
                            <label id="lblCountryName" style="margin: 6px;"></label>
                        </td>
                    </tr>
                    <tr>
                        <td>Postal Code 
                        </td>
                        <td>:</td>
                        <td>
                            <label id="lblPostalCode" style="margin: 6px;"></label>
                        </td>
                    </tr>
                    <tr>
                        <td>Email
                        </td>
                        <td>:</td>
                        <td>
                            <label id="lblEmail" style="margin: 6px;"></label>
                        </td>
                    </tr>
                    <tr>
                        <td>Contact No
                        </td>
                        <td>:</td>
                        <td>
                            <label id="lblContactNo" style="margin: 6px;"></label>
                        </td>
                    </tr>
                    <tr>
                        <td>Fax 
                        </td>
                        <td>:</td>
                        <td>
                            <label id="lblFax" style="margin: 6px;"></label>
                        </td>
                    </tr>
                </table>
            </div>

        </div>
    </div>
</div>


<div id="divScripts">
    <script id="CountryDropDownCompanyTemplate" type="text/html">
        <option value="{{= CountryID}}">{{= CountryName}}</option>
    </script>
    <script type="text/html" id="scriptThirdPartyDetails">

        <tr>
            <td>{{= CompanyName}}</td>
            <td>{{= ACCPACCode}}</td>
            <td>{{= AddressLine1}}</td>
            <td>{{= CountryName}}</td>
            <td>{{= PostalCode}}</td>
            <td>{{= Email}}</td>
            <td>{{= ContactNo}}</td>
            <td>
                <div class="action-buttons">
                    <a id="{{= ID}}" companyname="{{= CompanyName}}" accpaccode="{{= ACCPACCode}}" addressline1="{{= AddressLine1}}" addressline2="{{= AddressLine2}}" addressline3="{{= AddressLine3}}"
                        countrycode="{{= CountryCode}}" postalcode="{{= PostalCode}}" countryname="{{= CountryName}}" email="{{= Email}}" contactno="{{= ContactNo}}" fax="{{= Fax}}"
                        class="aView blue" href="javascript:void(0)">
                        <i class=" ace-icon fa fa-search-plus bigger-130"></i>
                    </a>

                    <a id="{{= ID}}" companyname="{{= CompanyName}}" accpaccode="{{= ACCPACCode}}" addressline1="{{= AddressLine1}}" addressline2="{{= AddressLine2}}" addressline3="{{= AddressLine3}}"
                        countrycode="{{= CountryCode}}" postalcode="{{= PostalCode}}" countryname="{{= CountryName}}" email="{{= Email}}" contactno="{{= ContactNo}}" fax="{{= Fax}}" class="aEdit green" href="javascript:void(0)">
                        <i class="  ace-icon fa fa-pencil bigger-130"></i>
                    </a>
                    {{if IsUsed == 0}}
                    <a id="{{= ID}}" class="aDelete red @ClassName" id="{{= ID}}" companyname="{{= CompanyName}}" accpaccode="{{= ACCPACCode}}" addressline1="{{= AddressLine1}}" addressline2="{{= AddressLine2}}" addressline3="{{= AddressLine3}}"
                        countrycode="{{= CountryCode}}" postalcode="{{= PostalCode}}" countryname="{{= CountryName}}" email="{{= Email}}" contactno="{{= ContactNo}}" fax="{{= Fax}}" href="javascript:void(0)">
                        <i class=" ace-icon fa fa-trash-o bigger-130"></i>
                    </a>
                    {{/if}}
                </div>

            </td>

        </tr>

    </script>
</div>




