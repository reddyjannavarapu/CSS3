@{
    ViewBag.Title = "Run Bill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

@using (Html.BeginForm("InvoiceFromCSS2", "Billing", FormMethod.Post))
{
  
    <div class="col-xs-12">

        <div class="col-xs-3">

            @Html.Partial("~/Areas/WO/Views/PartialContent/_ClientChosen.cshtml", new ViewDataDictionary { { "ddlId", "ddlClients" }, { "clientType", "" }, { "selectedId", -1 }, { "DisplayName", "Choose a Client" }, { "DefaultLoad", 0 }, { "WOID", 0 }, { "ClientSource", "1" } })
        </div>

        <div class="col-xs-1">
            <select id="ddlMonth">
                <option value="0">Month</option>
                <option value="1">Jan</option>
                <option value="2">Feb</option>
                <option value="3">March</option>
                <option value="4">April</option>
                <option value="5">May</option>
                <option value="6">June</option>
                <option value="7">July</option>
                <option value="8">Aug</option>
                <option value="9">Sept</option>
                <option value="10">Oct</option>
                <option value="11">Nov</option>
                <option value="12">Dec</option>
            </select>
        </div>

        <div class="col-xs-1">
            <select id="ddlYear">
                <option value="0">Year</option>
                <option value="2011">2011</option>
                <option value="2012">2012</option>
                <option value="2013">2013</option>
                <option value="2014">2014</option>
                <option value="2015">2015</option>
                <option value="2016">2016</option>
                <option value="2017">2017</option>
                <option value="2018">2018</option>
                <option value="2019">2019</option>
                <option value="2020">2020</option>
                <option value="2021">2021</option>
                <option value="2022">2022</option>
                <option value="2023">2023</option>
                <option value="2024">2024</option>
                <option value="2025">2025</option>
                <option value="2026">2026</option>
                <option value="2027">2027</option>
                <option value="2028">2028</option>
                <option value="2029">2029</option>
                <option value="2030">2030</option>

            </select>
        </div>

        <div class="col-xs-7">
            <input type="submit" value="Yearly (Jan)" id="btnYearlyJan" class="btn btn-purple" name="command" />

            <input type="submit" value="Half Yearly" id="btnYearlyHalfYearly" class="btn btn-success" name="command" />

            <input type="submit" value="Anniversary" id="btnAnniversary" class="btn btn-yellow" name="command" />

            <input type="submit" value="Yearly (Select)" id="btnYearlySelect" class="btn btn-primary" name="command" />
        </div>

    </div>
    
    <div class="col-xs-12 margin-20t">

        <div class="col-xs-7 col-xs-offset-5">

            <input type="submit" value="Yearly (Jan) (Schedule)" id="btnYearlyJanSch" class="btn btn-purple" name="command" />

            <input type="submit" value="Half Yearly (Schedule)" id="btnYearlyHalfYearlySch" class="btn btn-success" name="command" />

            <input type="submit" value="Anniversary (Schedule)" id="btnAnniversarySch" class="btn btn-yellow" name="command" />

            <input type="submit" value="Yearly (Select) (Schedule)" id="btnYearlySelectSch" class="btn btn-primary" name="command" />

        </div>

    </div>
    
