        <input type="submit" value="ADHOC" id="btnADHOC" class="btn btn-purple" name="command" />

        <div class="col-sm-4">
            <input type="submit" value="Sent To ACCPAC" class="btn btn-purple" name="command" />

            <input type="submit" value="Read From ACCPAC" class="btn btn-purple" name="command" />
