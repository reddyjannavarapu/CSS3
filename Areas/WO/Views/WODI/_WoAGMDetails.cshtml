            <script id="ShareholdersTemplate" type="text/html">
                <tr>
                    <td>
                        <div class="margin-5l">
                            <input type="checkbox" id="chkShareholders" class="ace chkShareholders" personid="{{= ShareHolderID}}" personsource="{{= PersonSource}}" woid="{{= WOID}}" classofshare="{{= ShareClassID}}" />

                            <span class="lbl"></span>
                        </div>
                    </td>
                    <td>{{= ShareHolderName}}
                    </td>
                    <td>{{= ClassName}}</td>
                    <td>{{if SharesHeld != 0 }}

                        <input type="text" id="txtShareHeld" onkeypress="return EnterOnlyNumbers(event)" disabled="disabled" class="txtShareHeld DisableCutCopyPaste" pattern="^[0-9]{6}*\.[0-9]{2}$" value="{{= SharesHeld}}" maxlength="9" />
                        {{else}}
                        <input type="text" id="txtShareHeld" onkeypress="return EnterOnlyNumbers(event)" disabled="disabled" class="txtShareHeld DisableCutCopyPaste" pattern="^[0-9]{6}*\.[0-9]{2}$" value="1" maxlength="9" />
                        {{/if}}
                    </td>
                    <td>{{if NetCashDividend != 0 }}
                        <input type="text" id="txtNetCashDividend" onkeypress="return AllowDecimalNumbersOnly(this,event,34,4)" maxlength="39" value="{{= NetCashDividend}}" pattern="^[0-9]{6}*\.[0-9]{2}$" class="txtNetCashDividend DisableCutCopyPaste special" />
                        {{else}}
                        <input type="text" id="txtNetCashDividend" onkeypress="return AllowDecimalNumbersOnly(this,event,34,4)" maxlength="39" value="{{= $GlobalWOAGMDetailsDividendpershare * SharesHeld }}" class="txtNetCashDividend DisableCutCopyPaste special" />
                        {{/if}}

