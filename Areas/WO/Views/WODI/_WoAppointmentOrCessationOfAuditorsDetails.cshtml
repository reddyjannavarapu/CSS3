@*<script src="~/Scripts/Validations.js"></script>*@

<div class="pull-right col-xs-12">
    @Html.Partial("~/Areas/WO/Views/Css1Info/_Css1Info.cshtml", new ViewDataDictionary { { "PopupHeader", "CSS1 Appointment Or Cessation Of Auditors Info" } })
</div>

<div class="col-xs-12 no-padding margin-5t" style="margin-bottom: 95px">

    <div class="col-xs-4">

        <div style="padding-top: 20px; padding-bottom: 185px;" class="col-xs-12 WoBC WoBR">

            <div class="col-xs-offset-1">

                <div class="col-xs-8" style="padding-top: 10px; display: none;">
                    <span class="text-left">Mode of appointment</span>
                </div>
                <div class="col-xs-11" style="display: none;">
                    <select class="col-xs-9" id="ddlModeOfAppointment">
                        <option value="-1">Select</option>
                    </select>
                </div>

                <div class="text-left col-xs-12 margin-10t">
                    New Auditor Name
                </div>
                <div class="col-xs-11 margin-2t">
                    <select class="col-xs-9" id="ddlNameOfAuditor" tabindex="1">
                        <option value="-1">Select</option>
                    </select>
                </div>

                <div class="col-xs-12 margin-10t">
                    <span>Other - New Auditor Name</span>
                </div>
                <div class="col-xs-10 margin-2t">
                    <input type="text" id="txtNameOfAuditor" class="form-control col-xs-10 special" placeholder="Name Of Auditor" tabindex="2" />
                </div>

                <div class="col-xs-12 margin-10t">
                    <span>Outgoing Auditor Name</span>
                </div>
                <div class="col-xs-10 margin-2t">
                    <input type="text" id="txtOutgoingAuditorName" tabindex="3" placeholder="Outgoing Auditor" class="form-control col-xs-10 DisableCutCopyPaste special" />
                </div>

                <div class="col-xs-8" style="padding-top: 10px; display: none;">
                    <span>Shareholding Structure</span>
                </div>
                <div class="col-xs-11" style="display: none;">
                    <select class="col-xs-9" id="ddlShareHoldingStructure" tabindex="4">
                        <option value="-1">Select</option>
                    </select>
                </div>

            </div>

        </div>

    </div>

    <div class="col-xs-4">

        <div class="col-xs-12 WoBC WoBR" style="padding-top: 20px; padding-bottom: 25px;">

            <div class="col-xs-offset-1">

                <div class="text-left col-xs-11 margin-10t">
                    <div class="col-xs-8 no-padding-left">
                        RO as Place of Meeting
                    </div>
                    <div class="col-xs-4">
                        <label>
                            <input type="checkbox" id="chkROPlaceOfMeeting" tabindex="5" class="col-xs-9 ace" />
                            <span class="lbl"></span>
                        </label>
                    </div>
                </div>

                <div class="text-left col-xs-12 margin-10t">
                    Meeting Address Line1
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" placeholder="Meeting Address Line1" id="txtMeetingAddressLine1" class="col-xs-9 special" maxlength="100" tabindex="6" />
                </div>

                <div class="text-left col-xs-12 margin-10t">
                    Meeting Address Line2
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" placeholder="Meeting Address Line2" id="txtMeetingAddressLine2" class="col-xs-9 special" maxlength="100" tabindex="7" />
                </div>

                <div class="text-left col-xs-12 margin-10t">
                    Meeting Address Line3
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" id="txtMeetingAddressLine3" placeholder="Meeting Address Line3" class="col-xs-9 special" maxlength="100" tabindex="8" />
                </div>

                <div class="text-left col-xs-12 margin-10t">
                    Meeting Address Country
                </div>
                <div class="col-xs-11 margin-2t">
                    <select class="col-xs-10 no-padding-left" id="ddlMeetingAddressCountry" tabindex="9">
                        <option value="-1">Select</option>
                    </select>
                </div>

                <div class="text-left col-xs-12 margin-10t">
                    Meeting Address Postal Code
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" placeholder="Meeting Address Postal Code" id="txtMeetingAddressPostalCode" maxlength="10" class="col-xs-9 DisableCutCopyPaste" tabindex="10" />
                </div>

            </div>

        </div>

    </div>

    <div class="col-xs-4">

        <div class="col-xs-12 WoBC WoBR" style="padding-top: 20px; padding-bottom: 90px;">

            <div class="col-xs-offset-1">

                <div class="col-xs-12">
                    <h4 class="text-left">Signing Director</h4>
                </div>

                <div class="col-xs-12 margin-10t">
                    <span>Meeting Notice</span>
                </div>
                <div class="col-xs-12 margin-2t">
                    @Html.Partial("~/Areas/WO/Views/PartialContent/_DirectorsChosen.cshtml", new ViewDataDictionary { { "Id", "MeetingNotice" }, { "selectedId", "" }, { "SearchType", "Officers" }, { "SearchRole", "GEN" }, { "WOID", @ViewBag.WOID }, { "DefaultLoad", 1 }, { "AutoSearch", 1 }, { "DisplayName", "Select Meeting Notice" } })
                </div>

                <div class="col-xs-12 margin-10t">
                    <span>Chairman of Meeting</span>
                </div>
                <div class="col-xs-12 margin-2t">
                    @Html.Partial("~/Areas/WO/Views/PartialContent/_DirectorsChosen.cshtml", new ViewDataDictionary { { "Id", "MeetingMinutes" }, { "selectedId", "" }, { "SearchType", "MeetingMinutes" }, { "SearchRole", "GEN" }, { "WOID", @ViewBag.WOID }, { "DefaultLoad", 1 }, { "AutoSearch", 1 }, { "DisplayName", "Select Chairman of Meeting" } })
                </div>

                <div class="text-left col-xs-12 margin-10t">
                    Other - Meeting Minutes
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" id="txtOtherMeetingMinutes" placeholder="Others Meeting Minutes" maxlength="100" class="form-control col-xs-9 DisableCutCopyPaste special" tabindex="11" />
                </div>

                <div class="text-left col-xs-12 margin-10t">
                    Designation
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" id="txtDesignation" placeholder="Designation" class="form-control col-xs-9 DisableCutCopyPaste special" tabindex="12" />
                </div>

            </div>

        </div>

    </div>

    <div class="col-xs-8 pull-right align-right" style="margin-top: 20px;">
        <button type="button" id="btnSaveAppOrCessOfAuditorsDetails" class="btn btn-info btnWOClose" tabindex="13">
            <i class="ace-icon fa fa-check bigger-110"></i>
            SAVE           
        </button>

        <button type="button" class="btn btnWOClose" id="btnCancelAppOrCessDetails" tabindex="14">
            <i class="ace-icon fa fa-undo bigger-110"></i>
            RESET                        
           
        </button>
    </div>

</div>






<div style="margin-top: 30px;" class="row">
</div>

<script id="ShareHoldingStructureTemplateinWOAppOrCessDetails" type="text/html">
    <option value="{{= ID}}">{{= Name}}</option>
</script>

<script id="AuditorsTemplateinWOAppOrCessDetails" type="text/html">
    <option value="{{= AuditorID}}">{{= AuditorName}}</option>
</script>

<script id="ModeOfAppointmentTemplateinWOAppOrCessDetails" type="text/html">
    <option value="{{= ID}}">{{= Name}}</option>
</script>
<script id="scriptCountry" type="text/html">
    <option value="{{= CountryID}}">{{= CountryName}}</option>
</script>
<script src="~/Areas/WO/Content/Scripts/_WoAppointmentOrCessationOfAuditorsDetails.js"></script>

