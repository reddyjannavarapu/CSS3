@{
    ViewBag.Title = "New WO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<link rel="stylesheet" href="/resources/demos/style.css">*@
<script src="~/Areas/WO/Content/Scripts/CreateWO.js"></script>

<div class="form-horizontal form-actions" >

    <div id="divWorkOrder">
        <div class="form-group">
            <label for="ddlBillable" class="col-sm-3 control-label no-padding-right">Billable</label>

            <div class="col-sm-9">               
                <select id="ddlBillable" class="col-xs-10 ddlsmall col-sm-1 no-padding-left" tabindex="1">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="lblIsAdhoc" class="col-sm-3 control-label no-padding-right">Adhoc</label>
            <div class="col-sm-9">
                <label>
                    <input id="chkIsAdhoc" type="checkbox" class="ace" tabindex="2" name="form-field-checkbox">
                    <span class="lbl"></span>
                </label>
            </div>
        </div>
        <div class="form-group" id="trCategory">
            <label for="ddlCategory" class="col-sm-3 control-label no-padding-right">Category<span class="redstar">*</span></label>
            <div class="col-sm-9">
                <select id="ddlCategory" class="col-xs-10 ddlsmall col-sm-1 no-padding-left" tabindex="3">
                    <option value="-1">Select</option>
                     <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                </select>
            </div>
        </div>
        <div class="form-group" id="trType">
            <label class="col-sm-3 control-label no-padding-right">Type<span class="redstar">*</span></label>
            <div class="col-sm-9" style="width: 251px">
                <select id="ddlWOTypes" disabled="disabled" tabindex="4" class="ddlsmall">
                    <option value="-1">Select</option>
                </select>
            </div>
        </div>


        <div class="form-group" id="trClient">
            <label for="labelClients" class="col-sm-3 control-label no-padding-right">Client / Customer<span class="redstar">*</span></label>
            <div class="col-sm-9" id="ddlClients" tabindex="5">
                @Html.Partial("~/Areas/WO/Views/PartialContent/_ClientChosen.cshtml", new ViewDataDictionary { { "ddlId", "ddlClient" }, { "clientType", "" }, { "selectedId", -1 }, { "DisplayName", "Choose a Client / Customer" }, { "DefaultLoad", 0 }, { "WOID", 0 }, { "ClientSource","1,4"} })
            </div>
        </div>

        <div class="form-group">
            <label for="ddlGroupCode" class="col-sm-3 control-label no-padding-right">Group Code<span class="redstar">*</span></label>
            <div class="col-sm-9" tabindex="6">
                @Html.Partial("~/Areas/WO/Views/PartialContent/_GroupInfo.cshtml", new ViewDataDictionary { { "ddlId", "InCWO" }, { "GroupType", "InCWO" }, { "selectedId", 0 }, { "DisplayName", "Select" } })
            </div>
        </div>

        <div class="form-group">
            <label for="ddlGroupCode" class="col-sm-3 control-label no-padding-right">Description </label>
            <div class="col-xs-9">
                <textarea maxlength="250" id="txtDescription" style="resize: none; width: 400px;" class="form-control limited special" tabindex="7"></textarea>
            </div>
        </div>

        <div class="clearfix ">
            <div class="col-md-offset-3 col-md-9">
                <button type="button" class="Add btn btn-info" id="Add" tabindex="8">
                    <i class="ace-icon fa fa-check bigger-110"></i>
                    CREATE
           
                </button>
                &nbsp; &nbsp; &nbsp;
           
                    <button type="button" class="Cancel btn" id="Cancel" tabindex="9">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        RESET
           
                    </button>
            </div>
        </div>
    </div>
</div>
@*<script src="~/Scripts/Validations.js"></script>*@
<script id="DITypeScript" type="text/html">
    <option value="{{= Code}}">{{= Name}}</option>
</script>
<script id="scriptCategory" type="text/html">
    <option value="{{= Code}}">{{= Name}}</option>
</script>
