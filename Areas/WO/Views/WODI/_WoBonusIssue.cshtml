<div class="row">
    <div class="pull-right col-xs-12">
        @Html.Partial("~/Areas/WO/Views/Css1Info/_Css1Info.cshtml", new ViewDataDictionary { { "PopupHeader", "CSS1 Bonus Issue Info" } })
    </div>
</div>

<div class="row margin-10t">

    <div class="col-xs-4">

        <div class="col-xs-12 WoBC WoBR" style="padding-top: 20px; padding-bottom: 126px;">

            <div class="col-xs-offset-1">

                <div class="text-left col-xs-12 margin-10t">
                    Register of Members on
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" id="txtDateRegisterOfMembersOn" placeholder="DDMMYYYY" class="col-xs-8 DisableCutCopyPaste special" tabindex="2" onblur="javascript:validateDateDDMMYYYY(this)" onkeypress="return checkDateValidation(event)" maxlength="10" />
                </div>

                <div class="text-left col-xs-12 margin-10t">
                    No of Bonus shares issued per share held
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" id="txtNoOfBonusIssuePerShare" onkeypress="return AllowDecimalNumbersOnly(this,event,34,4)" maxlength="39" placeholder="No of Bonus shares per share held" class="col-xs-8 DisableCutCopyPaste special" tabindex="1" />
                </div>

                <div class="text-left col-xs-12 margin-10t">
                    Amt to be treated as paid on each share
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" id="txtAmtToBeTreatedAsPaidOnEachShare" onkeypress="return AllowDecimalNumbersOnly(this,event,34,4)" maxlength="39" placeholder="Amt to be treated as paid on each share" class="col-xs-8 DisableCutCopyPaste special" tabindex="3" />
                </div>

                <div class="text-left col-xs-12 margin-10t">
                    Resultant Total no. of issued shares
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" id="txtResultantTotalIssuedShares" onkeypress="return EnterOnlyNumbers(event)" placeholder="Resultant Total no. of issued shares" class="col-xs-8 DisableCutCopyPaste" maxlength="30" tabindex="4" />
                </div>

                <div class="text-left col-xs-12 margin-10t">
                    Resultant Issued Capital
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" id="txtResultantIssuedCapital" onkeypress="return AllowDecimalNumbersOnly(this,event,34,4)" maxlength="39" placeholder="Resultant Issued Capital" class="col-xs-8 DisableCutCopyPaste special" tabindex="5" />
                </div>

                <div class="text-left col-xs-12 margin-10t" style="display: none;">
                    Share Holding Structure
                </div>
                <div class="col-xs-12 margin-2t" style="display: none;">
                    <select id="ddlShareHoldingStructure" tabindex="21" class="col-xs-8">
                        <option value="">Select</option>
                    </select>
                </div>

                <div class="text-left col-xs-12 margin-10t">
                    Resultant Paid Up Capital
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" id="txtResultantPaidUpCapital" onkeypress="return AllowDecimalNumbersOnly(this,event,34,4)" maxlength="39" placeholder="Resultant Paid up Capital" class="col-xs-8 DisableCutCopyPaste special" tabindex="7" />
                </div>

            </div>

        </div>

    </div>

    <div class="col-xs-4">

        <div style="padding-top: 20px; padding-bottom: 154px;" class="col-xs-12 WoBC WoBR">

            <div class="col-xs-offset-1">

                <div class="text-left col-xs-12 no-padding-left margin-10t">
                    <div class="col-xs-7">
                        RO as Place of Meeting
                    </div>

                    <div class="col-xs-5">
                        <label>
                            <input type="checkbox" id="chkIsRegisteredAddressasPlaceOfMeeting" class="ace" tabindex="8" />
                            @*<input id="chkVerified" type="checkbox" class="ace" name="form-field-checkbox" tabindex="3">*@
                            <span class="lbl"></span>
                        </label>
                    </div>
                </div>

                <div class="col-xs-8 margin-10t">
                    Meeting Address Line1
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" placeholder="Address Line1" id="txtAddressLine1" class="col-xs-8 special" maxlength="100" tabindex="9" />
                </div>

                <div class="col-xs-8 margin-10t">
                    Meeting Address Line2
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" placeholder="Address Line2" id="txtAddressLine2" class="col-xs-8 special" maxlength="100" tabindex="10" />
                </div>

                <div class="col-xs-12 margin-10t">
                    Meeting Address Line3
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" id="txtAddressLine3" placeholder="Address Line3" class="col-xs-8 special" maxlength="100" tabindex="11" />
                </div>

                <div class="text-left col-xs-8 margin-10t">
                    Meeting Address Country
                </div>
                <div class="col-xs-12 margin-2t">
                    <select class="col-xs-8 no-padding-left" id="ddlAddressCountry" tabindex="12">
                        <option value="-1">Select</option>
                    </select>
                </div>

                <div class="col-xs-8 margin-10t">
                    Meeting Address Postal Code
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" placeholder="Address Postal Code" id="txtAddressPostalCode" maxlength="10" class="col-xs-8 DisableCutCopyPaste" tabindex="13" />
                </div>

            </div>

        </div>

    </div>

    <div class="col-xs-4">

        <div class="col-xs-12 WoBC WoBR" style="padding-top: 20px; padding-bottom: 30px;">

            <div class="col-xs-offset-1">

                <div class="col-xs-12">
                    <h4 class="text-left">Signing Director</h4>
                </div>

                <div class="col-xs-8 margin-10t">
                    <span class="text-left">Meeting Notice</span>
                </div>
                <div class="col-xs-12 margin-2t" tabindex="14">
                    @Html.Partial("~/Areas/WO/Views/PartialContent/_DirectorsChosen.cshtml", new ViewDataDictionary { { "Id", "MeetingNotice" }, { "selectedId", "" }, { "SearchType", "Officers" }, { "SearchRole", "GEN" }, { "WOID", @ViewBag.WOID }, { "DefaultLoad", 1 }, { "AutoSearch", 1 }, { "NatureAppoint", "7,9" }, { "DisplayName", "Meeting Notice " } })
                </div>

                <div class="col-xs-8 margin-10t">
                    <span class="text-left">Meeting Minutes</span>
                </div>
                <div class="col-xs-12 margin-2t" tabindex="15">
                    @Html.Partial("~/Areas/WO/Views/PartialContent/_DirectorsChosen.cshtml", new ViewDataDictionary { { "Id", "MeetingMinutes" }, { "selectedId", "" }, { "SearchType", "MeetingMinutes" }, { "SearchRole", "GEN" }, { "WOID", @ViewBag.WOID }, { "DefaultLoad", 1 }, { "AutoSearch", 1 }, { "DisplayName", "Meeting Minutes" } })
                </div>

                <div class="col-xs-8 margin-10t">
                    <span class="text-left">Other - Meeting Minutes</span>
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" id="txtOtherMeetingMinutes" placeholder="Others Meeting Minutes" tabindex="16" maxlength="100" class="form-control col-xs-9 special" />
                </div>

                <div class="col-xs-11 margin-10t">
                    <span class="text-left">Designation</span>
                </div>
                <div class="col-xs-12 margin-2t">
                    <input type="text" id="txtDesignation" placeholder="Designation" maxlength="100" value="Chairman" tabindex="17" class="form-control col-xs-9 special" />
                </div>

                <div class="col-xs-8 margin-10t">
                    <span class="text-left">Notice Of Resolution</span>
                </div>
                <div class="col-xs-12 margin-2t" tabindex="18">
                    @Html.Partial("~/Areas/WO/Views/PartialContent/_DirectorsChosen.cshtml", new ViewDataDictionary { { "Id", "NoticeOfResolution" }, { "selectedId", "" }, { "SearchType", "Officers" }, { "SearchRole", "GEN" }, { "WOID", @ViewBag.WOID }, { "DefaultLoad", 1 }, { "AutoSearch", 1 }, { "NatureAppoint", "9" }, { "DisplayName", "Notice Of Resolution" } })
                </div>

                <div class="col-xs-8 margin-10t">
                    <span class="text-left">Letter of Allotment</span>
                </div>
                <div class="col-xs-12 margin-2t" tabindex="19">
                    @Html.Partial("~/Areas/WO/Views/PartialContent/_DirectorsChosen.cshtml", new ViewDataDictionary { { "Id", "LetterofAllotment" }, { "selectedId", "" }, { "SearchType", "Officers" }, { "SearchRole", "GEN" }, { "WOID", @ViewBag.WOID }, { "DefaultLoad", 1 }, { "AutoSearch", 1 }, { "NatureAppoint", "9" }, { "DisplayName", "Letter of Allotment" } })
                </div>

                <div class="col-xs-8 margin-10t" style="padding-top: 10px;">
                    <span class="text-left">Return of Allotment</span>
                </div>
                <div class="col-xs-12 margin-2t" tabindex="20">
                    @Html.Partial("~/Areas/WO/Views/PartialContent/_DirectorsChosen.cshtml", new ViewDataDictionary { { "Id", "ReturnofAllotment" }, { "selectedId", "" }, { "SearchType", "Officers" }, { "SearchRole", "GEN" }, { "WOID", @ViewBag.WOID }, { "DefaultLoad", 1 }, { "AutoSearch", 1 }, { "NatureAppoint", "9" }, { "DisplayName", "Return of Allotment" } })
                </div>

            </div>

        </div>

    </div>

</div>
<div style="margin-top: 25px" class="pull-right">
    <button type="button" class="btn btn-info btnWOClose" id="btnSaveBonusIssue" tabindex="21"><i class="ace-icon fa fa-check bigger-110"></i>SAVE</button>
    <button id="btnClearBonusIssue" class="btn btnWOClose" tabindex="22" type="button">
        <i class="ace-icon fa fa-undo bigger-110"></i>
        RESET
    </button>
</div>
<div class="row" style="margin-top: 10px;">
    <div class="col-xs-12 gridDiv">
        <div id="divDividedShare">
            <div class="col-xs-12">

                <div class="col-xs-2 no-padding-left">
                    <span class="col-xs-12 no-padding-left">Class of Share</span>
                    <select id="ddlBonusIssueClassOfShare" tabindex="6" class="col-xs-10 no-padding-left margin-10t ddlBonusIssueClassOfShare">
                    </select>

                </div>

                <div class="col-xs-3 no-padding-left">
                    <span class="col-xs-12 no-padding-left">Consideration of each share</span>
                    <select class="col-xs-3 no-padding-left margin-10t" tabindex="24" id="ddlDividentPerShareCurrency">
                        <option value="">Select</option>
                    </select>
                    <input type="text" class="form-control col-xs-8 margin-10t DisableCutCopyPaste special margin-5l" tabindex="23" onkeypress="return AllowDecimalNumbersOnly(this,event,34,4)" maxlength="39" placeholder="Consideration of each share" id="txtConsiderationOfEachShare">
                </div>

                <div class="col-xs-3  no-padding-right">
                    <span class="col-xs-12 no-padding-left">Total No of new Shares to be allotted</span>
                    <input type="text" onkeypress="return EnterOnlyNumbers(event)" class="form-control col-xs-12 margin-10t DisableCutCopyPaste" tabindex="25" placeholder="Total No of new Shares to be allotted" pattern="^[0-9]{6}*\.[0-9]{2}$" maxlength="30" id="txtTotalNoOfNewSharesToBeAllotted">
                </div>
                <div class="col-xs-2  no-padding-right">
                    <span class="col-xs-12 no-padding-left">Total Consideration</span>
                    <input type="text" class="form-control col-xs-12  margin-10t DisableCutCopyPaste special" onkeypress="return AllowDecimalNumbersOnly(this,event,34,4)" maxlength="39" tabindex="26" placeholder="Total Consideration" pattern="^[0-9]{6}*\.[0-9]{2}$" id="txtTotalConsideration">
                </div>
                <div class="col-xs-1  no-padding-right">

                    <button type="button" class="btn btn-info btnWOClose" id="btnSaveShareHoldersDetails" tabindex="27" style="margin-top: 28px;">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        SAVE           
                    </button>

                </div>

                @*<a id="showSaveShareHoldersDetails" href="javascript:void(0)" style="margin-left: 40px;">View
                </a>*@
                <div class="col-xs-1  no-padding-right pull-right align-right">
                    <button id="showSaveShareHoldersDetails" type="button" class="btn btn-xs btn-inverse">View</button>
                </div>

            </div>
            <div id="divShareholdersList" style="margin-top: 12px; display: none">

                <table class="table table-striped table-bordered table-hover col-xs-12" id="tblShareHoldersDevident" style="background-color: white !important; margin-top: 12px;">

                    <thead>
                        <tr>
                            <th style="width: 30px">
                                <div class="margin-5l">
                                    <label class="no-margin">
                                        <input name="form-field-checkbox" class="ace chkSelectAllBOISSH" id="chkSelectAllBOISSH" type="checkbox">
                                        <span class="lbl"></span>
                                    </label>
                                </div>
                            </th>
                            <th>Shareholder
                            </th>
                            <th>Shares Held
                            </th>
                            <th>Consideration
                            </th>
                            <th>No of Bonus Shares To Issue</th>
                            <th>Delete
                            </th>

                        </tr>
                    </thead>
                    <tbody id="trBonusShareholdersData">
                    </tbody>
                </table>
                <div id="divShareholdersNoData" style="display: none" class="row widget-main">
                    <table class="table table-striped table-bordered table-hover">
                        <tbody>
                            <tr>
                                <td colspan="5">
                                    <div id="noShareholdersData">
                                        No data found.
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

        <div class="clear"></div>
    </div>
</div>

<div id="divCss1InfoForBonusIssue" class="modal row" tabindex="-1">
    <div class="modal-dialog" style="left: 15%;">
        <div class="modal-content" style="width: 165%">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="blue bigger">CSS1 Bonus Issue Info</h4>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

<div id="divBonusScripts">
    <script id="ShareHoldingStructure" type="text/html">
        <option value="{{= ID}}">{{= Name}}</option>
    </script>
    <script id="scriptCurrency" type="text/html">
        <option value="{{= CurrencyID}}">{{= CurrencyName}}</option>
    </script>
    <script id="scriptCountry" type="text/html">
        <option value="{{= CountryID}}">{{= CountryName}}</option>
    </script>
    <script id="scriptShareClass" type="text/html">
        <option value="{{= ShareClassID}}">{{= ClassName}}</option>
    </script>

    <script id="ShareholdersTemplate" type="text/html">
        <tr>
            <td>
                <div style="margin-left: 7px">
                    <input type="checkbox" id="chkShareholders" class="ace chkShareholders" personid="{{= ShareHolderID}}" personsource="{{= PersonSource}}" woid="{{= WOID}}" />

                    <span class="lbl"></span>
                </div>
            </td>
            <td>{{= ShareHolderName}}
            </td>
            <td>{{if SharesHeld != 0 }} 

                <input type="text" id="txtShareHeld" onkeypress="return EnterOnlyNumbers(event)" disabled="disabled" class="txtShareHeld DisableCutCopyPaste" pattern="^[0-9]{6}*\.[0-9]{2}$" value="{{= SharesHeld}}" maxlength="9" />
                {{else}} 
                 
                <input type="text" id="txtShareHeld" onkeypress="return EnterOnlyNumbers(event)" disabled="disabled" class="txtShareHeld DisableCutCopyPaste" pattern="^[0-9]{6}*\.[0-9]{2}$" value="1" maxlength="9" />

                {{/if}}
            </td>
            <td>{{if NetCashDividend != 0 }} 
                <input type="text" id="txtNetCashDividend" onkeypress="return AllowDecimalNumbersOnly(this,event,34,4)" maxlength="39" value="{{= NetCashDividend}}" pattern="^[0-9]{6}*\.[0-9]{2}$" class="txtNetCashDividend DisableCutCopyPaste special" />
                {{else}}
                <input type="text" id="txtNetCashDividend" onkeypress="return AllowDecimalNumbersOnly(this,event,34,4)" maxlength="39" value="{{= $GlobalBonusIssue.ConsiderationOfEachShareInList * SharesHeld}}" class="txtNetCashDividend DisableCutCopyPaste special" />
                {{/if}}
            </td>
            <td>
                <input type="text" id="NoOfBonusShareToIssue" onkeypress="return EnterOnlyNumbers(event)" value="{{= NoOfBonusShareToIssue}}" class="NoOfBonusShareToIssue DisableCutCopyPaste" maxlength="30" />

            </td>
            <td style="text-align: center">{{if ID != 0 }} 
                        <a class="red DeleteShareHolders btnWOClose" href="javascript:void(0)" woshareholdersdividentid="{{= ID}}" personid="{{= ShareHolderID}}" personsource="{{= PersonSource}}" woid="{{= WOID}}">
                            <i class="ace-icon fa fa-trash-o bigger-130"></i></a>
                {{/if}}
            </td>

        </tr>
    </script>

</div>
