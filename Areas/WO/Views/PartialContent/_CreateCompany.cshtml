<link href="~/Content/css/assets/css/jquery-ui.min.css" rel="stylesheet" />
<style>
    .ui-datepicker {
        width: 19em;
    }
</style>
<input type="hidden" id="hdnCreateCompany" value="0" />
<script src="~/Areas/WO/Content/Scripts/_CreateCompany.js"></script>

<div id="modal-form_Company" class="modalCompany modal row" tabindex="-1">
    <div class="modal-dialog" style="left: 20%;">
        <div class="modal-content" style="width: 150%">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="blue bigger">New Corporation</h4>
            </div>
            <div class="modal-body">

                <div class="row">

                    <div class="col-xs-4">

                        <div class="col-xs-12 WoBC WoBR" style="padding-top: 20px; padding-bottom: 20px;">
                            <div class="text-left col-xs-12">
                                Name <span class="redstar">*</span>
                            </div>
                            <div class="col-xs-12">
                                <input type="text" placeholder="Name Of the company" class="col-xs-9 special" id="txtNameOfCompany" maxlength="100" tabindex="1" />
                            </div>

                            <div class="text-left col-xs-12" style="padding-top: 10px;">
                                Country of Incorporation
                            </div>
                            <div class="col-xs-12">
                                <select class="col-xs-9 no-padding-left ddlCountryInCreateCompany" id="ddlCountryOfIncorporation" tabindex="2">
                                    <option value="-1">Select</option>
                                </select>
                            </div>

                            <div class="text-left col-xs-12" style="padding-top: 10px;">
                                Date of Incorporation
                            </div>
                            <div class="col-xs-12">
                                <input type="text" placeholder="Date of Incorporation" class="col-xs-9 special" id="txtDateOfInCorporation" tabindex="3" onblur="javascript:validateDateDDMMYYYY(this)" onkeypress="return checkDateValidation(event)" maxlength="10" />
                            </div>

                            <div class="text-left col-xs-12" style="padding-top: 10px;">
                                Registration No
                            </div>
                            <div class="col-xs-12">
                                <input type="text" placeholder="Registration No" class="col-xs-9 special" id="txtCompanyRegistrationNo" maxlength="50" tabindex="4" />
                            </div>

                            <div class="text-left col-xs-12" style="padding-top: 10px;">
                                ACCPAC Code
                            </div>
                            <div class="col-xs-12">
                                <input type="text" placeholder="ACCPAC Code" class="col-xs-9" id="txtACCPACCode" maxlength="20" tabindex="5" />
                            </div>
                        </div>

                    </div>

                    <div class="col-xs-4">

                        <div class="col-xs-12 WoBC WoBR" style="padding-top: 20px; padding-bottom: 20px;">
                            <div class="text-left col-xs-12">
                                Address Line1
                            </div>
                            <div class="col-xs-12">
                                <input type="text" placeholder="Address Line1" class="col-xs-9 special" id="txtCompanyAddressLine1" maxlength="50" tabindex="6" />
                            </div>

                            <div class="text-left col-xs-12" style="padding-top: 10px;">
                                Address Line2
                            </div>
                            <div class="col-xs-12">
                                <input type="text" placeholder="Address Line2" class="col-xs-9 special" id="txtCompanyAddressLine2" maxlength="50" tabindex="7" />
                            </div>
                            <div class="text-left col-xs-12" style="padding-top: 10px;">
                                Address Line3
                            </div>
                            <div class="col-xs-12">
                                <input type="text" placeholder="Address Line3" class="col-xs-9 special" id="txtCompanyAddressLine3" maxlength="50" tabindex="8" />
                            </div>

                            <div class="text-left col-xs-12" style="padding-top: 10px;">
                                Country
                            </div>
                            <div class="col-xs-12">
                                <select class="col-xs-9 no-padding-left ddlCountryInCreateCompany" id="ddlCountry" tabindex="9">
                                    <option value="-1">Select</option>
                                </select>
                            </div>

                            <div class="text-left col-xs-12" style="padding-top: 10px;">
                                Postal Code
                            </div>
                            <div class="col-xs-12">
                                <input type="text" placeholder="Postal Code" class="col-xs-9" id="txtCompanyPostalCode" maxlength="20" tabindex="10" />
                            </div>
                        </div>

                    </div>

                    <div class="col-xs-4">

                        <div class="col-xs-12 WoBC WoBR" style="padding-top: 20px; padding-bottom: 144px;">
                            <div class="text-left col-xs-12">
                                Email
                            </div>
                            <div class="col-xs-12">
                                <input type="text" placeholder="Email" class="col-xs-12 special" id="txtEmailinCompany" maxlength="100" tabindex="11" />
                            </div>

                            <div class="text-left col-xs-12" style="padding-top: 10px;">
                                Contact No
                            </div>
                            <div class="col-xs-12">
                                <input type="text" placeholder="Contact No" class="col-xs-12" id="txtContactNoinCompany" maxlength="20" tabindex="12" />
                            </div>

                            <div class="text-left col-xs-12" style="padding-top: 10px;">
                                Fax
                            </div>
                            <div class="col-xs-12">
                                <input type="text" placeholder="Fax" class="col-xs-12" id="txtFaxinCompany" maxlength="20" tabindex="13" />
                            </div>
                        </div>

                    </div>

                    <div class="col-xs-12 margin-20t align-right">
                        <button class="btn btn-info" type="button" id="btnSaveCompany" tabindex="14">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            SAVE
       
                        </button>
                        <button type="button" class="btn" id="btnCompanyCancel" tabindex="15">
                            <i class="ace-icon fa fa-undo bigger-110"></i>
                            RESET
           
                        </button>
                    </div>

                    <script id="CountryDropDownCompanyTemplate" type="text/html">
                        <option value="{{= CountryID}}">{{= CountryName}}</option>
                    </script>

                </div>

            </div>

        </div>
    </div>
</div>
