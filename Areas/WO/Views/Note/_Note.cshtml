<style>
    .NoteBorderRadius {
        border-radius: 6px;
    }
</style>
<a class="NoteAddInList" refid="{{= RefID}}" notetype="{{= NoteType}}" href="javascript:void(0)">
    <b>
    @*<img src="~/Content/images/NotePicture.png" width="24" height="20" />*@
        <i class="fa fa-comment-o bigger-160 info">
        <sup><span class="spnNoteCount" style="display: none;" >{{= NoteCount}}</span></sup></i>
    </b>
</a>
<div style="display: none; font-size: 11.2px !important;" id="NoteContentForPopup" class="NoteContentForPopup no-padding">
    @*<div class="divDilog" id="divDilog" style=""></div>*@
    <div id="NoteAddContent" style="height: auto;">
        <div class="widget-box no-margin" style="border: none;">
            <div class="widget-header">
                <h4 class="widget-title lighter smaller">
                    <i class="fa fa-comment-o bigger-160 info">
                        @*<img width="20" height="20" src="/Content/images/NotePicture.png">*@</i>
                    Notes
                </h4>
                <span id="spnType" class="spnType"></span>&nbsp;<span style="display: none;">[<span id="spnRefId" class="spnRefId"></span>]</span>
                <button type="button" class="close-btn ui-dialog-titlebar-close" id="aCloseNote" style="cursor: pointer; float: right"></button>
            </div>

            <div class="widget-body">
                <div class="widget-main no-padding">
                    <!-- #section:pages/dashboard.conversations -->
                    <div class="ace-scroll">
                        <div class="scroll-content" style="max-height: 300px;">
                        </div>
                    </div>

                    <!-- /section:pages/dashboard.conversations -->
                    <div class="form-actions no-margin" style="border-radius: 0px">
                        <div class="input-group">
                            <input placeholder="Type your message here ..." type="text" class="form-control special" maxlength="500" id="txtNoteDescription" style="/*width: 625px; */ max-width: 97%;" />
                            <span class="input-group-btn">
                                <button class="btnAddNote btn btn-sm btn-info no-radius" type="button">
                                    <i class="ace-icon fa fa-share"></i>
                                    SAVE
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
                <!-- /.widget-main -->
            </div>
            <!-- /.widget-body -->
        </div>
    </div>

</div>
