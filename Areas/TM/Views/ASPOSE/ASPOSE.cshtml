        width: auto !important;
    }
   
    .clssRepetedTr {
        border-top-color: #DDD9C3 !important;
    }
</style>

@using (Html.BeginForm("Index", "ASPOSE", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="divFU well">
