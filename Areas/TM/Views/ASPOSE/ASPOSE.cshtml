        SetPageAttributes('liAspose', 'Aspose Word', '', 'liAsposeWord');
    });
</script>

<style>
    .mainDiv {
        float: left;
        width: 100%;
    }

    .divFU {
        float: left;
        padding: 10px 10px;
        margin: 15px;
    }

    .divFilter {
      
        display: none;
        margin: 15px;
        padding: 10px;
        vertical-align: top;
        width: 300px;
       
    }

    .divType {
        float: left;
        margin: 12px;
    }

    .ddlStyle {
        width: 120px;
    }

    .subDivFu {
        width: 260px;
        float: left;
        padding-top: 10px;
    }

    .btnRemove {
